<% provide(:title, "Log In")%>
<div class="loginWrap">
	<h1 class="loginHead">Log In to BeerMaps</h1>
	<div class="loginForm">
		<%= form_for(:session, url: login_path ) do |f| %>
			<%= f.label :email %>
			<%= f.email_field :email, placeholder: "Email" %>
			
			<%= f.label :password %>
			<%= link_to "Forgot password?", new_password_reset_path, class: "forgotLnk" %>
			<%= f.password_field :password, placeholder: "Password" %>
			
			<%= f.label :remember_me, class: "checkbox" do %>
				<%= f.check_box :remember_me, checked: true %><span>Remember me on this computer</span>
			<% end %>
			
			<%= f.submit "Log In", class: "loginBtn" %>
		<% end %>
	</div>
</div>
