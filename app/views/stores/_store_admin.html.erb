<h1>Edit <%= @store.name %></h1>
<div class="hoursWrap">
	<div class="editWrap">
		<h3>General</h3>
		<%= form_for @store do |f| %>
			<%= render 'shared/error_messages' %>
			<%= f.label :name %>
			<%= f.text_field :name %>
			<%= f.label :email %>
			<%= f.text_field :email %>
			<%= f.label :address %>
			<%= f.text_field :address %>
			<%= f.label :city %>
			<%= f.text_field :city %>
			<%= f.label :state %>
			<%= f.text_field :state %>
			<div class="profilePicBack">
				<div class="profilePicWrap">
				 	<%= image_tag(@store.profile_pic.url(:profile), alt: @store.name, class: "profilePic picPreview")%> 
				</div>
			</div>
			<%= f.file_field :profile_pic, class: "uploadPic" %>
			<%= f.submit "Edit basic", class: "editBtn" %>
		<% end %>
	</div>
	<div class="hourWrap">
		<h3>Hours</h3>
		<% if !@store.hours.blank? %>
			<%= render 'hours/edit_hours' %>
		<% else %>
			<%= render 'hours/new_hours' %>
		<% end %>
	</div>
</div>