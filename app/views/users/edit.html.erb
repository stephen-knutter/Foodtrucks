<% provide(:title, @user.name + " | Edit")%>

<div class="editWrap">
	<h1 class="signHead">Edit Profile</h1>
	<div class="editForm">
		<%= form_for @user, html: {multipart: true } do |f| %>
			<%= render 'shared/error_messages' %>
			
			<%= f.label :name %>
			<%= f.text_field :name %>
			
			<%= f.label :email %>
			<%= f.email_field :email %>
			
			<%= f.label :password %>
			<%= f.password_field :password %>
			
			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation %>
			
			<div class="profilePicBack">
				<div class="profilePicWrap">
				 	<%= image_tag(@user.profile_pic.url(:profile), alt: @user.name, class: "profilePic")%> 
				</div>
			</div>
			<%= f.file_field :profile_pic, class: "uploadPic" %>
			
			<%= f.submit "Update profile", class: "editBtn" %>
		<% end %>
	</div>
</div>