<% provide(:title, @user.name) %>

<div class="profileContainer clearfix">
	
	<div class="leftCnter">
		<div class="profilePicWrap">
			<%= image_tag("no-profile.png", alt: @user.name, class: "profilePic") %>
		</div>
	</div>
	
	<div class="rightCnter">
		<h1 class="usernameHead"><%= @user.name %></h1>
		<% if @user == current_user %>
			<%= link_to "Edit", edit_user_path(@user), class: "userlink" %>
			&bull;
			<%= link_to "More Drinkers", users_path, class: "userlink" %>
		<% end %>
	</div>
</div>